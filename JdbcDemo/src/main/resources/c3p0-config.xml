<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
    <default-config>
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>
        <property name="jdbcUrl"><![CDATA[jdbc:mysql://localhost:3306/spring?serverTimezone=GMT%2B8&
            useUnicode=true&characterEncoding=utf8&useSSL=false]]>
        </property>
        <property name="user">root</property>
        <property name="password">root</property>
        <!-- 初始化连接的数量 -->
        <property name="initialPoolSize">10</property>
        <!-- 最大空闲时间，单位是秒 -->
        <property name="maxIdleTime">30</property>
        <!-- 池中最大连接的数量 -->
        <property name="maxPoolSize">100</property>
        <!-- 池中最小连接的数量 -->
        <property name="minPoolSize">10</property>
    </default-config>

    <named-config name="windows">
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>
        <property name="jdbcUrl">
            <![CDATA[jdbc:mysql://localhost:3306/spring?serverTimezone=Asia/Shanghai&useUnicode=true&characterEncoding=utf8&useSSL=false]]>
        </property>
        <property name="user">root</property>
        <property name="password">root</property>
        <!-- 初始化连接的数量 -->
        <property name="initialPoolSize">10</property>
        <!-- 最大空闲时间，单位是秒 -->
        <property name="maxIdleTime">30</property>
        <!-- 池中最大连接的数量 -->
        <property name="maxPoolSize">100</property>
        <!-- 池中最小连接的数量 -->
        <property name="minPoolSize">10</property>
    </named-config>
</c3p0-config>

